{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // 타입 선언 충돌 때문에 컴파일 멈추는 것 방지
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}